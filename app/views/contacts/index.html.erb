<h1>All Contacts</h1>

<%= button_to "New Contact", "/contacts/new", method: :get %>

<div class="container">
  <div class="row">
    <% @contacts.each_slice(2) do |two_contacts| %>
      <div class="row">
          <% two_contacts.each do |contact| %>
            <div class="col-md-6">
              <h2><%= link_to contact.name, "/contacts/#{contact.id}" %></h2>
              <img src="<%= contact.image %>" class="img-responsive">
              <h2><%= contact.email%></h2>
              <h2><%= contact.phone %></h2>
              <h2><%= contact.address %></h2>
            </div>
          <% end %>
      </div>
    <% end %>
  </div>
</div>